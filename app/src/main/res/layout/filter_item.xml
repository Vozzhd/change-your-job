<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_horizontal_size_16"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/padding_22dp">

    <TextView
        android:id="@+id/select_item"
        style="@style/Text_Regular_16"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Kaзахстан" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_arrow_forward_24px" />

</LinearLayout>
